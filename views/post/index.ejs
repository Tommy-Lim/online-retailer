<% if(page=='all'){ %>
  <h1 class="list-header">all products:</h1>
<% }else if(page=='search'&&products.length==1){ %>
  <h1 class="list-header">(<%- products.length %>) product found:</h1>
<% } else if(page=='search'){ %>%>
  <h1 class="list-header">(<%- products.length %>) products found:</h1>
<% } %>

<div class="row">
  <div class="col-sm-12">
    <% products.forEach(function(product){ %>
      <a href="/post/<%- product.id %>">
        <div class="product-line">
          <div class="row">
            <div class="col-xs-12">
              <div class="product-title"><%- product.title %><span style="float:right;">$ <%- product.price %></span></div class="product-title">
              <div>
                <strong>Location: </strong><%- product.location %>
              </div>
              <div>
                <strong>Details: </strong><%- product.details %>
              </div>
              <div>
                <strong>Created: </strong><%- product.createdAt %>
              </div>
            </div>
          </div>
        </div>
      </a>
    <% }); %>
  </div>
</div>
